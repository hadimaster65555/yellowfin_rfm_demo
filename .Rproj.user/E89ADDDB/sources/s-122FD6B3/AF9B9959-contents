# load library
library(tidyverse)
library(rfm)

analysis_date <- lubridate::as_date('2007-01-01', tz = 'UTC')

rfm_result <- rfm_table_customer(raw_data, 
                                 customer_id, 
                                 number_of_orders,
                                 recency_days, 
                                 revenue, 
                                 analysis_date)

rfm_result$rfm %>% 
  mutate_if(is.numeric, as.numeric) -> hasilnya

hasil <- as.data.frame(hasilnya)